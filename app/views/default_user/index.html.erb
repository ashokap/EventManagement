<div class="container-fluid">
	<title> Event Management</title>
	<div class="row">

		<div class="col-lg-8">
			<% if current_user.has_role? :admin %>
			<%= link_to '+', new_user_path , class: "btn btn-success", "data-toggle"=>"tooltip", "title"=>"Create User"  %>
			<% end %>
			<table class="table table-condensed" >
				<thead>
					<tr>
						<th>Email</th>
						<th>Role</th>
						<% if current_user.has_role? :admin %>
						<th>Actions</th>
						<%end%>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.email%></td>
						<td><%= (user.has_role? :admin) ? "admin" : "normal" %></td>
						<% if current_user.has_role? :admin %>
						<td><%= link_to "Edit", edit_user_path(user), class:"btn btn-info" %>	<%= link_to "Delete", user_path(user), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></td>
						<%end%>
					</tr>
					<% end %>
				</tbody>
			</table>

			<%= link_to "Back", events_url,class: "btn btn-default" %>

		</div>

		<div class="col-lg-2"></div>
	</div>
</div>
