
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-9" style="background-color:lavender;">
			<div id="calendar"></div>
		</div>
		<div class="col-sm-3" style="background-color:lavenderblush;">
			<%= form_tag(events_import_path, :multipart => true) do %>
			<p>
				<%= file_field_tag(:file) %>
				<br />
				<%= submit_tag("Import File",class: "btn btn-primary") %>
				<!-- <%= link_to 'New Event', new_event_path,class: "btn btn-success", title:"Create Event", rel:'tooltip' %> -->
				<%= link_to 'New Event', new_event_path,class: "btn btn-success", "data-toggle"=>"tooltip", "data-placement"=>"right", "title"=>"Tooltip on right"  %>
				
				<%= link_to "Profile", edit_user_registration_path %></li>
				
				<%= link_to "Settings", '#' %>
			</p>
			<% end %>
			<button class='btn btn-info' onclick="$('#target').toggle();">
				Show/Hide
			</button>
			<div id="target">
				Hide now
			</div>
			<br />
			<br />
			<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo" title="Collapse text" rel="tooltip">
				Simple collapsible
			</button>

			<div id="demo" class="collapse in">
				This is a sample collapsible paragraph to demostrate Bootstrap data-api plugins
			</div>
			
			<br />
			<br />
			<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch modal
</button>

			<div class="modal fade" id="myModal">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal">
								<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
							</button>
							<h4 class="modal-title">Modal title</h4>
						</div>
						<div class="modal-body">
							<p>
								Fill in appropriate content here&hellip;
							</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">
								Close
							</button>
							<button type="button" class="btn btn-primary">
								Save changes
							</button>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->

		</div>
	</div>
</div>

