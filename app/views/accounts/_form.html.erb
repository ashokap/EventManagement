<div class="container-fluid">
	<title> Event Management</title>

	<%= form_for(@account , :html => {:multipart => true} ) do |f| %>
	<% if @account.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@account.errors.count, "error") %> prohibited this event from being saved:</h2>

		<ul>
			<% @account.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="col-lg-8" >
	<div class="field">
		<%= f.label :Name %>
		<br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :Company %>
		<br>
		<%= f.text_area :company %>
	</div>

<p>
    <label>My Files</label>
    <%= image_tag(@account.file_url) if @account.file? %>
    <%= f.file_field :file %>
    
  </p>
  <p>
    <label>
      <%= f.check_box :remove_file %>
      Remove file
    </label>
  </p>
	<div class="actions">
		<%= f.submit(class: "btn btn-primary") %>
	</div>
	<% end %>
	<%= link_to 'Back', accounts_path, class: "btn btn-default" %>
</div>
</div>