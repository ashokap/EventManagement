<div class="container-fluid">
	<title> Event Management Create Account Form</title>

	<%= form_for(@account) do |f| %>
	<% if @account.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@account.errors.count, "error") %> prohibited this event from being saved:</h2>

		<ul>
			<% @account.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="field">
		<%= f.label :Name %>
		<br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :Company %>
		<br>
		<%= f.text_area :company %>
	</div>

	<div class="actions">
		<%= f.submit(class: "btn btn-primary") %>
	</div>
	<% end %>

</div>