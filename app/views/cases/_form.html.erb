<div class="col-lg-8" >
<%= form_for(@case) do |f| %>
  <% if @case.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@case.errors.count, "error") %> prohibited this case from being saved:</h2>

      <ul>
      <% @case.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :stage %><br>
    <!-- <%= f.text_field :stage %> -->
        	
	<%= f.select :stage, options_for_select(['FIR','On Hold','Rejected','Closed'] , ( (@currentcase.nil?) ? 'FIR' : @currentcase.stage))  %>
  
  </div>
  <div class="field">
    <%= f.label :starting_date %><br>
    <%= f.text_field :starting_date, :value => @case.starting_date.nil? ? '' : @case.starting_date.strftime("%d-%m-%Y") %>
  </div>
  <div class="field">
    <%= f.label :ending_date %><br>
    <%= f.text_field :ending_date,  :value => @case.ending_date.nil? ? '' : @case.ending_date.strftime("%d-%m-%Y") %>
  </div>
  <div class="field">
    <%= f.label :next_hearing %><br>
    <%= f.text_field :next_hearing,  :value => @case.next_hearing.nil? ? '' : @case.next_hearing.strftime("%d-%m-%Y") %>
  </div>
  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>
<% end %>
<%= link_to 'Back', cases_path,class: "btn btn-default" %>
</div>
